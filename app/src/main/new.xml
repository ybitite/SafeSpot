<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="10dp">

    <ImageView android:id="@+id/info_window_image" android:layout_width="80dp"
        android:layout_height="80dp" android:scaleType="centerCrop"
        android:src="@drawable/emergency_icon" />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="10dp" android:orientation="vertical">

        <TextView android:id="@+id/info_window_title" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Title" android:textStyle="bold" />

        <TextView android:id="@+id/info_window_snippet" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Snippet" />
    </LinearLayout>
</LinearLayout>